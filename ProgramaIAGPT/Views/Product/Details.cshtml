@model Product

<div class="container">
    <h2>Product Details</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Price: $@Model.Price</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
